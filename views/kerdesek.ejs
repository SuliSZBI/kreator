<!DOCTYPE html>
<html lang="hu">
    <head>
        <meta charset="UTF-8" />
        <meta
            name="viewport"
            content="width=device-width, initial-scale=1.0"
        />
        <link
            rel="stylesheet"
            href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0"
        />
        <link
            rel="shortcut icon"
            href="/images/info-bg.png"
            type="image/x-icon"
        />
        <link
            rel="stylesheet"
            href="/css/stilus.css"
        />
        <title>API - Kérdések</title>
    </head>
    <body>
        <%- include('./nav.ejs') %>
        <a href="#felfele">
            <span
                class="material-symbols-outlined"
                id="fel-nyil"
            >
                arrow_circle_up
            </span>
        </a>
        <div class="kerdesek-kontener">
            <% kerdesek.forEach(kerdes => { %>
            <div class="kerdes">
                <h4>Kérdés:</h4>
                <p><%= kerdes.kerdes %></p>
                <img src="<%= kerdes.kep %>" />
                <h4>Típus:</h4>
                <p><%= kerdes.tipus %></p>
                <h4>Tárgy:</h4>
                <p><%= kerdes.targy %></p>
                <h4>Válaszok:</h4>
                <ul>
                    <% kerdes.valaszok.forEach(elem => { %>
                    <li><%= elem %></li>
                    <% }) %>
                </ul>
                <h4>Jó válasz(ok):</h4>
                <ul>
                    <% kerdes.joValaszok.forEach(elem => { %>
                    <li><%= elem %></li>
                    <% }) %>
                </ul>
                <div class="gombok">
                    <div class="bal">
                        <a href="/kerdes/modosit/<%= kerdes._id %>"
                            >Módosítás</a
                        >
                    </div>
                    <div class="jobb">
                        <button onclick="torles('<%= kerdes._id%>')">
                            Törlés
                        </button>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
        <script src="/js/menu.js"></script>
        <script src="/js/kerdesek.js"></script>
    </body>
</html>
